<article class="post_item" id="title-box">
  <div id="box">
    <div class="title">
      <a href="/post/{{id}}">{{title}}</a>
    </div>
    <div class="body">
      {{format_post text}}
    </div>
    <div class="meta">
      <strong>Posted by {{user.username}} on {{format_date created_at}}</strong>
    </div>
    <div class="meta">
      {{!-- <strong> {{comment_count}}{{format_plural " comment" comment_count}}</strong> --}}
      <strong> {{format_plural " comment" comment_count}}</strong>
    </div>
  </div>

</article>