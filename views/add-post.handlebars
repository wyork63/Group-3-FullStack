 <div class="container row">
    <h1>Hi, Welcome to your Dashboard</h1>
  <h2>Share your thoughts on a location!</h2>
  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <br>
    <div>
      <label for="text">Description</label>
    </div>
    <div>
        <textarea rows="7" cols="40" id="text" name="text"> </textarea>
    </div>
    <br>
    <form>
        <label for="country">What Country?</label>
        <select name="country" id="country" name="country"> 
            <option value="1">Italy</option>
            <option value="2">Spain</option>
            <option value="3">Great Britain</option>
            <option value="4">USA</option>
            <option value="5">Turkie</option>
        </select>
    </form>
    <button type="submit" class="btn">Create</button>
    
  </form>

  
</div>
<script src="/javascript/add-post.js"></script>



