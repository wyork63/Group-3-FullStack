 <div class="container row">
    <h1>Hi, Welcome to your Dashboard</h1>
  <h2>Share your thoughts on a location!</h2>
  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <br>
    <div>
      <label for="text">Description</label>
    </div>
    <div>
        <textarea rows="7" cols="40" id="text" name="text"> </textarea>
    </div>
    <br>
    <form>
        <label for="country">What Country?</label>
        <select name="country" id="country" name="country"> 
            <option value="France">France</option>
            <option value="Spain">Spain</option>
            <option value="United States">United States</option>
            <option value="China">China</option>
            <option value="Italy">Italy</option>
        </select>
    </form>
    <button type="submit" class="btn">Create</button>
  </form>
</div>



<script src="/public/javascript/add-post.js"></script>
