<div class="container signup">
  <form class="signup-form form-horizontal">
    <div class="form-group ">
      <label
        class="control-label col-sm-2"
        for="username-signup"
      >Username:</label>
      <div class="col-sm-3">
        <input
          type="text"
          class="form-control"
          id="username-signup"
          placeholder="Enter Username"
        />
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="email-signup">Email:</label>
      <div class="col-sm-3">
        <input
          type="text"
          class="form-control"
          id="email-signup"
          placeholder="Enter Email"
        />
      </div>
    </div>
    <div class="form-group">
      <label
        class="control-label col-sm-2"
        for="password-signup"
      >Password:</label>
      <div class="col-sm-3">
        <input
          type="password"
          class="form-control"
          id="password-signup"
          placeholder="Enter Password"
        />
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">signup</button>
      </div>
    </div>
  </form>
</div>

<script src="/javascript/signup.js"></script>